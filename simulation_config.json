{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 20000,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -80.0
  },
  "inputs": {
    "se_voltage_clamp": {
      "input_type": "voltage_clamp",
      "module": "SEClamp",
      "node_set": "all",
      "gids": [
        4164
      ],
      "amps": [
        [
          -70,
          -70,
          -70
        ]
      ],
      "durations": [
        [
          20000,
          20000,
          20000
        ]
      ],
      "rs": [
        0.01
      ]
    },
    "mthalamus_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/mthalamus_spikes.h5",
      "node_set": "mthalamus"
    },
    "exc_bg_bask_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/exc_bg_bask_spikes.h5",
      "node_set": "exc_bg_bask"
    },
    "exc_bg_chn_spikes": {
      "input_type": "spikes",
      "module": "sonata",
      "input_file": "$BASE_DIR/exc_bg_chn_spikes.h5",
      "node_set": "exc_bg_chn"
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "se_clamp_report": {
      "variable_name": "se",
      "module": "clamp_report"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json",
  "network": "$BASE_DIR/circuit_config.json"
}
